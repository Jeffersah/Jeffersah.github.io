{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "lib": [ "es6", "dom" ],
        "jsx": "react",
        "types": [ "node" ],
        "removeComments": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ]
}